<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans-4.2.xsd 
							http://www.springframework.org/schema/context 
							http://www.springframework.org/schema/context/spring-context-4.2.xsd 
							http://www.springframework.org/schema/mvc 
							http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
							http://www.springframework.org/schema/aop 
							http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
	<!-- mvc的注解驱动 -->
	<mvc:annotation-driven />
	<!-- 启用组件扫描后，隐时启动了注解注解驱动，所以上面的配置可以去掉 -->
 	<context:component-scan base-package="com.controller"/><!-- 组建扫描扫的是包，所以只写包名 -->
	
	<!-- 多种映射处理器同时存在时，不会冲突，但是默认映射处理器的存在于【无参】构造器的存情形在近似，存在覆盖关系
	#不手动配置任何映射器时，使用的是默认handlerMapping：BeenNameUrlHandlerMapping（注解开发时不手动配置映射器）
	#SimpleUrlHandlerMapping,需要手动配置url和controller的映射 -->

	<!-- 注解式处理器方法适配器 -->
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />  
	
	<!-- 视图解析器（通过拼接前后缀字符串的方式找到目的视图） -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	 	<!-- webroot到某一指定文件夹的路径（适当的浅一些，后续模块文件夹写在ModeAndView中） -->
	 	<property name="prefix" value="/WEB-INF/page/"/>
	 	<property name="suffix" value=".jsp"/>
	</bean>

	<!-- 配置上传文件解析器，并限制最大体积为1MB -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize">
			<value>1024000</value>
		</property>
	</bean>
	
	<!-- 排除静态资源 -->
	<mvc:resources location="/script/" mapping="/script/**"/>
	<mvc:resources location="/css/" mapping="/css/**"/>
</beans>